<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mechanic Dashboard"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@color/teal_200"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src= "@drawable/kemf_splashscreen_logo"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/mechanic_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mechanic Name"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/service_request_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Request"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/customer_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/customer_location_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Location"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/navigate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigate to Customer"
            android:background="@color/teal_200"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            />

        <Button
            android:id="@+id/service_completed_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Completed"
            android:background="@color/teal_200"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/review_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Review"
        android:textSize="18sp"
        android:padding="16dp"
        android:background="@color/white"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/review_description_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No reviews yet."
        android:textSize="16sp"
        android:padding="16dp"
        android:textColor="@color/black"
        />


</LinearLayout>

